{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "commently/tests/*": [
        "tests/*"
      ],
      "commently/*": [
        "app/*",
        "lib/ui-kit/app/*",
        "lib/commenter/app/*"
      ],
      "*": [
        "types/*"
      ],
      "ui-kit": [
        "lib/ui-kit/addon"
      ],
      "ui-kit/*": [
        "lib/ui-kit/addon/*"
      ],
      "commenter": [
        "lib/commenter/addon"
      ],
      "commenter/*": [
        "lib/commenter/addon/*"
      ]
    }
  },
  "include": [
    "app",
    "tests",
    "types",
    "lib/ui-kit",
    "lib/commenter"
  ]
}
